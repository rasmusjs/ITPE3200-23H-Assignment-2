@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="identity-account">
    <h3>Set your password</h3>
    <partial name="_StatusMessage" for="StatusMessage"/>
    
    <p>
        You do not have a local username/password for this site. Add a local
        account so you can log in without an external login.
    </p>

    <form id="set-password-form" method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Input.NewPassword"></label>
            <input asp-for="Input.NewPassword" autocomplete="new-password"/>
            <span asp-validation-for="Input.NewPassword" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password"/>
            <span asp-validation-for="Input.ConfirmPassword" class="error"></span>
        </div>
        <button type="submit" class="submit-btn">Set password</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}