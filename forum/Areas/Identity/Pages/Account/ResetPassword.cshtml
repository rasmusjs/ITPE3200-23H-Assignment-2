@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="identity-account">
    <h1>@ViewData["Title"]</h1>
    <h2>Reset your password.</h2>
    <hr/>
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="Input.Code" type="hidden"/>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" autocomplete="username" aria-required="true"/>
            <span asp-validation-for="Input.Email" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" autocomplete="new-password" aria-required="true"/>
            <span asp-validation-for="Input.Password" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true"/>
            <span asp-validation-for="Input.ConfirmPassword" class="error"></span>
        </div>
        <button type="submit" class="submit-btn">Reset</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}